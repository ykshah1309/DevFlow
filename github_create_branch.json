{
  "openapi": "3.0.0",
  "info": {
    "title": "GitHub Create Branch",
    "version": "1.0.0"
  },
  "servers": [{"url": "https://api.github.com"}],
  "paths": {
    "/repos/{owner}/{repo}/git/refs": {
      "post": {
        "summary": "Create new branch",
        "operationId": "github_create_branch",
        "parameters": [
          {"name": "owner", "in": "path", "required": true, "schema": {"type": "string"}},
          {"name": "repo", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ref": {"type": "string", "description": "Branch ref: refs/heads/branch-name"},
                  "sha": {"type": "string", "description": "Commit SHA to branch from"}
                },
                "required": ["ref", "sha"]
              }
            }
          }
        },
        "responses": {
          "201": {"description": "Branch created"},
          "422": {"description": "Branch already exists"}
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {"type": "http", "scheme": "bearer"}
    }
  },
  "security": [{"bearerAuth": []}]
}